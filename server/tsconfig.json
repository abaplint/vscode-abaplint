{
	"extends": "../tsconfig.base.json",
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "out",
		"rootDirs": [
			"src",
			"../common"
		],
		"lib": [
			"es6",
			"webworker"
		]
	},
	"include": [
		"src",
		"../.eslintrc.js"
	],
	"exclude": [
		"node_modules",
		"../node_modules",
		"**/node_modules/*"
	]
}